<ForgetPage>:
    MDToolbar:
		elevation:10
		title:"Retrieve Password"
		pos_hint:{'top':1}
		left_action_items:[["menu",lambda x:x]]
		right_action_items:[["arrow-collapse-left",lambda x:root.forget_to_login()]]
		md_bg_color:[35/255,49/255,48/255,1]

    MDCard:
		radius:[dp(20)]
		size_hint:None,None
		size:400,500
		pos_hint:{"center_x":.5,"center_y":.5}
		elevation:15
		padding:20
		spacing:50
		orientation:"vertical"
		md_bg_color:[35/255,49/255,48/255,1]
		MDLabel:
			text:"Retrieve"
			font_style:'Button'
			font_size:70
			halign:"center"
			size_hint_y:None
			height:self.texture_size[1]
		MDTextFieldRound:
		    id:user_forget_password
			hint_text:"Email Used For Registration "
			icon_left:"email"
			size_hint_x:None
			width:300
			font_size:20
			pos_hint:{"center_x":.5}
	    MDTextFieldRound:
		    id:new_set_password
			hint_text:"New Password"
			icon_left:"form-textbox-lock"
			size_hint_x:None
			width:300
			font_size:20
			pos_hint:{"center_x":.5}
        MDTextFieldRound:
		    id:confirm_new_set_password
			hint_text:"Confirm New Password"
			icon_left:"repeat"
			size_hint_x:None
			width:300
			font_size:20
			pos_hint:{"center_x":.5}


        MDFillRoundFlatIconButton:
            icon:'autorenew'
            pos_hint:{"center_x":0.5,"center_y":0.1}
            font_size: 20
            text: "Confirm"
            on_release: root.change_password()





<SuccessRetrieveDialog@BoxLayout>:
    orientation: "vertical"
    padding: dp(40)

    MDLabel:
        text: "Successful!"
        size_hint_y: None
        height: self.texture_size[1]
        halign: "center"
        valign: "center"
        bold: True
        theme_text_color: "Custom"
        text_color: 0, .7, 0, 1

    MDLabel:
        text: "Successfully Retrieve! Please Back To Login!"
        halign: "center"
        valign: "top"
        theme_text_color: "Custom"
        text_color: 0, .7, 0, 1
        font_style: "Caption"

    MDFillRoundFlatButton:
        id: button
        text: "Confirm"
        md_bg_color: 0, .7, 0, 1
        pos_hint: {"center_x": .5}
        on_press:app.forget_to_login()

<ErrorRetrieveDialog@BoxLayout>:
    orientation: "vertical"
    spacing: dp(10)
    padding: dp(20)

    MDLabel:
        text: "Retrieve Failed"
        halign: "center"
        theme_text_color: "Custom"
        text_color: .9, 0, 0, 1

    MDLabel:
        text: "Please make sure to enter the correct information and try again!"
        halign: "center"
        theme_text_color: "Custom"
        text_color: .9, 0, 0, 1
        font_style: "Caption"

    MDFillRoundFlatButton:
        id: button
        text: "Dismiss"
        md_bg_color: .9, 0, 0, 1
        pos_hint: {"center_x": .5}