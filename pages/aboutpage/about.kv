<AboutPage>:
    #on_leave: root.clear_data()
    #:import SweetAlert kivymd_extensions.sweetalert.SweetAlert

    MDBoxLayout:
        orientation: "vertical"
        #spacing: dp(10)
        MDToolbar:
            elevation:10
		    title:"About"
		    pos_hint:{'top':1}
		    left_action_items:[["menu",lambda x:x]]
		    right_action_items:[["home-heart",lambda x:root.about_to_home()]]
		    md_bg_color:[35/255,49/255,48/255,1]
            #id: _toolbar

        MDGridLayout:
            padding: "10dp"
            spacing: "10dp"
            cols: 1
            adaptive_height: True
            Widget:
                size_hint_y: None
                height: "3dp"
            MDBoxLayout:
                orientation: "horizontal"
                adaptive_height: True
                MDLabel:
                    font_style: "H6"
                    text: 'Author Information'
                    halign: "left"
                MDIconButton:
                    icon: "information"
                    halign: "center"
                    on_press: root.get_date()

        MDSeparator:

        ScrollView:
            MDBoxLayout:
                adaptive_height: True
                spacing: dp(10)
                padding: dp(24)
                orientation: "vertical"

                Loadercard:
                    id: user1

        MDGridLayout:
            padding: "10dp"
            spacing: "10dp"
            cols: 1
            adaptive_height: True
            Widget:
                size_hint_y: None
                height: "3dp"
            MDBoxLayout:
                orientation: "horizontal"
                adaptive_height: True
                MDLabel:
                    font_style: "H6"
                    text: 'App Information'
                    halign: "left"
                MDIconButton:
                    icon: "chart-pie"
                    halign: "center"
                    on_press:root.show_piechart()
                MDIconButton:
                    icon: "web"
                    halign: "center"
                    on_press:root.top_center()


        MDSeparator:

        ScrollView:
            MDBoxLayout:
                id: chart_box
                adaptive_height: True
                spacing: dp(10)
                padding: dp(24)
                orientation: "vertical"
                #AKPieChart:
                    #size_hint:[None, None]
                    #items: root.items
                    #pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    #size: dp(250), dp(250)

        MDBoxLayout:
            adaptive_height: True
            padding: dp(5)
            spacing: dp(4)




<DataloaderLabel@AKLabelLoader>
    size_hint_y: None
    height: dp(20)
    theme_text_color: "Primary"
    halign: "left"


<Loadercard>
    padding: "8dp"
    size_hint: None, None
    size: dp(280), dp(140)
    pos_hint: {"center_x": .5, "center_y": .5}
    name: ""
    email: ""
    website: ""
    avatar: ""

    MDBoxLayout:

        MDFloatLayout:
            size_hint_x: .3

            AKImageLoader:
                id: avatar
                size_hint: None,None
                size: dp(50), dp(50)
                pos_hint: {"center_x": .5 , "center_y": .5}
                source: root.avatar

        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: .7
            padding: dp(10)
            spacing: dp(10)

            DataloaderLabel:
                id: name
                text:  root.name

            MDSeparator:

            DataloaderLabel:
                id: email
                text:  root.email

            MDSeparator:

            DataloaderLabel:
                id: website
                text: root.website

<Notification@BoxLayout>
    padding: dp(10)

    MDLabel:
        text: "This action will lead to an external link,are you sure?"
        theme_text_color: "Secondary"
        halign: "left"
    MDIconButton:
        id: button
        icon: "check"
        halign: "right"
        valign: "center"
        on_press:app.open_website("http://oliverfan.top/posts/2adb/")
