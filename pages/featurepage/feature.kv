<FeaturePage>:
    #feature_page: feature_page.__self__
    CustomToolbar:
        id: toolbar
        size_hint_y: None
        height: app.theme_cls.standard_increment
        md_bg_color: [35/255,49/255,48/255,1]
        elevation: 10
        padding: "8dp", 0, 0, 0
        pos_hint: {"top": 1}

        MDIconButton:
            icon: "keyboard-return"
            theme_text_color: "Custom"
            text_color: toolbar.specific_text_color
            md_bg_color: [35/255,49/255,48/255,1]
            pos_hint: {"center_y": .5}
            on_press:root.feature_to_contour()

        Widget:
            size_hint_x: None
            width: "25dp"

        MDLabel:
            text: "Wound Feature Analysis"
            shorten: True
            font_style: "H6"
            theme_text_color: "Custom"
            text_color: toolbar.specific_text_color

        IconButtonTooltips:
            icon: 'clipboard-text-outline'
            theme_text_color: "Custom"
            text_color:(1,1,1,1)
            pos_hint: {'center_x': .5, 'center_y': .5}
            tooltip_text: 'View Detailed Information'
            on_press: root.view_detailed_information()

        IconButtonTooltips:
            icon: 'email-send'
            theme_text_color: "Custom"
            text_color:(1,1,1,1)
            pos_hint: {'center_x': .5, 'center_y': .5}
            tooltip_text: self.icon
            on_press: root.show_email_send_dialog()

        HomeIconButtonTooltips:



    #MDToolbar:
        #elevation:10
        #type: "top"
		#title: 'Wound Feature Analysis'
		#pos_hint:{'top':1}
		#left_action_items:[["keyboard-return", lambda x: root.feature_to_contour()]]
		#right_action_items:[["email-send",lambda x:root.email_report()],["home-assistant", lambda x: root.feature_to_info()],["clipboard-text-outline", lambda x: root.view_detailed_information()]]
		#md_bg_color:[35/255,49/255,48/255,1]

	MDCard:
	    radius:[dp(50)]
		size_hint:None,None
		size:450,700
		pos_hint:{"center_x":.5,"center_y":.47}
		elevation:15
		padding:15
		spacing:15
		orientation:"vertical"
		md_bg_color:[240/255,255/255,240/255,0.5]


        BoxLayout:
            orientation:'horizontal'

            AnchorLayout:
                anchor_x:'center'
                anchor_y:'center'
                Label:
                    text:'Generation Date:'
                    font_size:'22sp'
