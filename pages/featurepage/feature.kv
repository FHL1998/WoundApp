<EmailIconButtonTooltips@MDIconButton+MDTooltip>
    icon: 'email-send'
    theme_text_color: "Custom"
    text_color:(1,1,1,1)
    pos_hint: {'center_x': .5, 'center_y': .5}
    tooltip_text: self.icon
    on_press: root.email_dialog()

<HomeIconButtonTooltips@MDIconButton+MDTooltip>
    icon: 'home-assistant'
    theme_text_color: "Custom"
    text_color:(1,1,1,1)
    pos_hint: {'center_x': .5, 'center_y': .5}
    tooltip_text: self.icon
    on_press: app.feature_to_info()

<EmailSendDialogsContent>
    orientation: "vertical"
    padding: dp(20)

    MDLabel:
        text: "E-mail Receiving Address"
        halign: "center"
        valign: "center"
        theme_text_color: "Custom"
        text_color: app.theme_cls.primary_color

    MDLabel:
        text: "Please enter e-mail before continue"
        theme_text_color: "Secondary"
        font_style: "Caption"

    MDTextField:
        id:receiver_email
        hint_text: "E-mail"

    BoxLayout:
        orientation:'horizontal'
        spacing:35
        MDFillRoundFlatButton:
            id: send
            text: "Send"
            pos_hint: {"center_x": .5}
            md_bg_color: 1, .75, 0, 1
            on_press: app.email_report()

        MDFillRoundFlatButton:
            id: cancel
            text: "Cancel"
            pos_hint: {"center_x": .5}
            md_bg_color: 1, .75, 0, 1